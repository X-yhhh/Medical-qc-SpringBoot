<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.medical.qc.mapper.UserMapper">
    
    <resultMap id="BaseResultMap" type="com.medical.qc.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="email" property="email" />
        <result column="password_hash" property="passwordHash" />
        <result column="full_name" property="fullName" />
        <result column="hospital" property="hospital" />
        <result column="department" property="department" />
        <result column="role_id" property="roleId" />
        <result column="is_active" property="isActive" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="access_token" property="accessToken" />
    </resultMap>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="findByEmail" resultMap="BaseResultMap">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, email, password_hash, full_name, hospital, department, role_id, is_active, created_at, updated_at)
        VALUES (#{username}, #{email}, #{passwordHash}, #{fullName}, #{hospital}, #{department}, #{roleId}, #{isActive}, NOW(), NOW())
    </insert>

    <update id="updateAccessToken">
        UPDATE users SET access_token = #{accessToken} WHERE username = #{username}
    </update>

    <select id="findByAccessToken" resultMap="BaseResultMap">
        SELECT * FROM users WHERE access_token = #{accessToken}
    </select>

</mapper>
